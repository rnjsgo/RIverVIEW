{
  "manifest_version": 2, 
  "name": "RIverVIEW",
  "version": "1.0",
  "description": "AI 기반 온라인 쇼핑몰 리뷰 데이터 분석 서비스",
  "permissions": ["webRequest", "tabs", "<all_urls>", "http://192.249.18.224:3000/"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": ["http://*/*"]
    }
  ],
  "icons": {
    "16": "public/river16.png",
    "48": "public/river48.png",
    "128": "public/river128.png"
  },  
  "browser_action": {
    "default_icon": "public/river128.png",
    "icons": {
      "16": "public/river16.png",
      "48": "public/river48.png",
      "128": "public/river128.png"
    },
    "default_title": "RIverVIEW",
    "default_popup": "public/index.html"
  },
  "options_ui": {
    "page": "public/options.html"
  }
}
